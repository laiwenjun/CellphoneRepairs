page {
    background-color: #eee;
}

.main {
}

.top {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 88rpx;
    line-height: 48rpx;
    background-color: #fff;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}

.top>view {
    float: left;
    width: 25%;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    padding: 20rpx 0;
}

.top>view>text {
    display: inline-block;
    width: 100%;
    border-right: 1rpx solid #eee;
}

.top>view:last-child>text {
    border-right: none;
}

.top>view.on {
    color: #333;
    background-color: #ffda44;
}

.top>view.on text {
    border-right: 1rpx solid #ffda44;
}

.rowCon {
    background-color: #fff;
}

.row {
    position: relative;
    padding: 30rpx 30rpx 30rpx 160rpx;
    border-bottom: 1rpx solid #eee;
}

.rowCon>view:last-child {
    border-bottom: none;
}

.row>image {
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    border: 1rpx solid #eee;
}

.row_t_l {
    float: left;
    font-size: 28rpx;
    font-weight: 700;
}

.row_t_r {
    float: right;
    font-size: 28rpx;
    font-weight: 700;
}

.row_m {
    font-size: 24rpx;
    margin: 20rpx 0;
}

.row_b_l {
    float: left;
    font-size: 22rpx;
    color: #999;
}

.row_b_r {
    float: right;
    font-size: 24rpx;
}

.row_b_r.red {
    color: #FF3333;
}

.gray {
    color: #ccc;
}

.nomore {
    text-align: center;
    font-size: 24rpx;
    color: #666;
    padding: 40rpx 0;
}