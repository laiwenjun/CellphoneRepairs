page {
    font-size: 28rpx;
}

.title {
    color: #666;
    padding: 30rpx;
}

.imgCon {
    padding: 30rpx;
    margin: 30rpx auto 0;
    background-color: #fff;
}

.imgCon view {
    position: relative;
    display: inline-block;
    vertical-align: top;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    border: 1rpx solid #e4e4e4;
    margin-right: 30rpx;
}

.imgCon view image {
    width: 100%;
    height: 100%;
}

.imgCon view text {
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 100%;
    color: #fff;
    background-color: #ccc;
}

.addImg {
    line-height: 100rpx;
    font-size: 80rpx;
    font-weight: 700;
    color: #ccc;
}

.textarea {
    display: block;
    width: 100%;
    height: 200rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.input {
    display: block;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    margin-bottom: 60rpx;
    background-color: #fff;
}

.placeholder {
    color: #999;
}

.confirm {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 36rpx;
    border-radius: 8rpx;
    color: #333;
    background-color: #ffda44;
    margin: auto;
}

.confirm:active {
    background-color: #f0da44;
}