.formBox {
    margin-left: 3%;
    font-size: 28rpx;
    position: relative;
}

.formBox .text {
    position: relative;
    border-bottom: 1px solid #f4f4f4;
    padding: 4% 0 4% 20%;
}

.formBox .title {
    width: 20%;
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 2;
}

.formBox .remark {
    width: 20%;
    height: 44rpx;
    line-height: 44rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.top_box {
    box-sizing: border-box;
    width: 100%;
    padding: 2% 3% 3% 3%;
    font-size: 28rpx;
}

.top_box_title {
    line-height: 80rpx;
}

.top_box_sel {
    display: inline-block;
    font-size: 28rpx;
    padding: 1% 3%;
    border: 1px solid #ccc;
    margin-right: 40rpx;
    border-radius: 8rpx;
}

.top_box_sel.on {
    background-color: #fff4c7;
    border-color: #ffeda4;
}