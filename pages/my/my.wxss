.top {
    padding-top: 80rpx;
    background-color: #ffda44;
}

.imgCon {
    display: block;
    width: 160rpx;
    height: 160rpx;
    border-radius: 100%;
    overflow: hidden;
    background-color: #ccc;
    margin: 0 auto 20rpx;
}

.imgCon image {
    width: 100%;
    height: 100%;
}

.name {
    text-align: center;
    font-size: 32rpx;
    padding-bottom: 40rpx;
}

.rowCon {
    padding-left: 30rpx;
    background-color: #fff;
}

.row {
    position: relative;
    padding: 26rpx 0;
}

.row:active {
    background-color: #fafafa;
}

.row_l {
    float: left;
    width: 42rpx;
    height: 42rpx;
    margin-right: 42rpx;
}

.row_l image {
    width: 100%;
    height: 100%;
}

.row_text {
    font-size: 32rpx;
    color: #333;
    padding-left: 70rpx;
}

.row_text text {
    float: right;
    margin-right: 80rpx;
    color: #999;
}

.arrows {
    position: absolute;
    right: 50rpx;
    top: 50%;
    width: 20rpx;
    height: 20rpx;
    border-width: 1rpx;
    border-color: #999 #999 transparent transparent;
    border-style: solid;
    transform: rotate(45deg) translateY(-50%);
}

.activity {
    margin-top: 40rpx;
    height: 160rpx;
    background-color: white;
    box-sizing: border-box;
    padding: 3%;
    position: relative;
}

.activity:active {
    background-color: #fafafa;
}

.activity view {
    margin-left: 14rpx;
}

.activity image {
    width: 256rpx;
    height: 126rpx;
    position: absolute;
    right: 40rpx;
    top: 16rpx;
}

.activity_text01 {
    color: #999;
    font-size: 28rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
}

.activity_text02 {
    font-size: 40rpx;
    font-weight: 600;
    color: #333;
}